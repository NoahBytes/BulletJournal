[flake8]
per-file-ignores =
    # imported but unused (F401) 
    # module level import not a top of file (E402)
    # __init__.py needs to import a module for interpreter to see the module
    __init__.py: F401, E402,
    # test_sample.py is a simple test file at the moment.  Allow F401 when more complicated tests are added.
    test_sample.py: F401


extend-ignore = 
    # Indentation contains mixed spaces and tabs (E101)
    E101,
    # Expected an indented block (comment) (E115)
    E115,
    # Continuation line under-indented for visual indent (E128)
    E128,
    # Whitespace before ':' (E203)
    E203,
    # Line too long (82>79 characters (E501)),
    E501,
    # Indentation contains tabs (W191)
    W191


exclude =
    # No need to traverse our git directory
    .git,
    .gitignore,
    # There's no value in checking cache directories
    __pycache__,
    # bitbucket-pipeline.yml
    bitbucket-pipeline.yml,
    # No need to look at VSCode's .venv directory
    .venv
    # No need to look at applications environment file
    .env
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist
max-complexity = 10